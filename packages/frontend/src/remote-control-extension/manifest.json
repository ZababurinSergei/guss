{
  "manifest_version": 3,
  "name": "P2P Remote Control Bridge",
  "version": "1.0",
  "description": "Мост между P2P-чатом и Chrome DevTools Protocol для удалённого управления",
  "permissions": [
    "debugger",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "externally_connectable": {
    "matches": ["*://*/*"]
  }
}